{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "tests/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "isolatedModules": true,
    "types": ["vite/client", "node"],
    "lib": ["dom", "es2018"],
    "allowJs": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  }
}